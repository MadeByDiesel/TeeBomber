									{% endif %}

									{% if settings.slide1_button_label != '' %}
										<a class="button{% if settings.slide1_img_style == 'light' %} dark{% endif %} label d" href="{{ settings.slide1_button_url}}">{{ settings.slide1_button_label }}<span>&rarr;</span></a>
									{% endif %}

								</div>
							</div>
						</div>

					</div>

					{% if settings.slide1_img_url != '' %}
