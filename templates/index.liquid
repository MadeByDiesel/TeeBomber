{% if settings.carousel_enable %}

	<div id="home-slider" class="swiper-container">

		<div class="swiper-wrapper">

			{% if settings.slide1_show %}

				<div class="slide swiper-slide">

					<div class="slide-img" style="background-image:url({{ 'slide1_img.jpg' | asset_url }})">

						<img src="{{ 'slide1_img.jpg' | asset_url }}" alt="{{ settings.slide1_label1 }}" />

						<div class="slide-caption {{ settings.slide1_labels_pos }} {{ settings.slide1_img_style }}">
							<div class="table-display">
								<div>

									{% if settings.slide1_label1 != '' %}
										<span class="label a">{{ settings.slide1_label1 }}</span>
									{% endif %}

									{% if settings.slide1_label2 != '' %}
										<h2 class="label b">{{ settings.slide1_label2 }}</h2>
									{% endif %}

