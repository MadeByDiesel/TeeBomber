{% if settings.home_page_enable or settings.home_blog_enable or settings.home_list_products_enable or settings.home_list_enable != "no" %}

	<div id="page-content" class="{% if settings.carousel_enable %} hide-content {% endif %}{% unless settings.home_list_enable contains 'collections' or settings.home_list_products_enable %} no-extra-space {% endunless %}clearfix">

		{% unless settings.home_list_enable == 'no' %}

			<div id="products-grid" class="isotope-products home-content collections-list border-{{ settings.collections_border }}{% if settings.carousel_enable %} no-loader{% endif %}{% if settings.home_list_products_enable %} kill-space {% endif %}">

				{% if settings.home_list_enable == 'collections' %}

					{% for collection in collections limit:6 %}

					<!-- locksmith:v3({% include 'locksmith-variables', locksmith_scope: 'subject', locksmith_subject: collection %} {% unless locksmith_locked and locksmith_access_denied and locksmith_manual_lock == false %}) -->

						{% if collection.handle == 'frontpage' %}
							{% continue %}
					    {% endif %}
					    
						{% include 'collections_item' %}

					<!-- locksmith:v3({% endunless %}) -->

					{% endfor %}

				{% elsif settings.home_list_enable == 'collections-manual' %}	

					{% if settings.home_collections_select_1 != '' %}
						{% include 'collections_item-variable' with collections[settings.home_collections_select_1] %}
					{% endif %}
				
					{% if settings.home_collections_select_2 != '' %}
						{% include 'collections_item-variable' with collections[settings.home_collections_select_2] %}
					{% endif %}
				
					{% if settings.home_collections_select_3 != '' %}
						{% include 'collections_item-variable' with collections[settings.home_collections_select_3] %}
					{% endif %}
				
					{% if settings.home_collections_select_4 != '' %}
						{% include 'collections_item-variable' with collections[settings.home_collections_select_4] %}
					{% endif %}
				
					{% if settings.home_collections_select_5 != '' %}
						{% include 'collections_item-variable' with collections[settings.home_collections_select_5] %}
					{% endif %}
				
					{% if settings.home_collections_select_6 != '' %}
						{% include 'collections_item-variable' with collections[settings.home_collections_select_6] %}
					{% endif %}

				{% endif %}

			</div>

		{% endunless %}

		{% if settings.home_list_products_enable %}

			<div id="products-grid" class="isotope-products home-content products-list border-{{ settings.collections_border }}{% if settings.carousel_enable %} no-loader{% endif %}">

				{% assign collection_count = collections[settings.home_collections_select].products_count | times: 1 %}

				{% if collection_count == 0 %}

					{% for i in (1..4) %}
						{% capture product_img %} {% cycle '1', '2' %} {% endcapture %}
						{% include 'collection_item-blank' with product_img %}
					{% endfor %}

					<div class="onboarding">

						<p>{{ 'general.onboarding.no_products' | t }}</p>

						<p>{{ 'general.onboarding.edit_homepage' | t }}</p>

						<a class="button" href="/admin/themes">{{ 'general.onboarding.customize_theme' | t }}</a>
						<a class="button" href="/admin/products/new">{{ 'general.onboarding.add_products' | t }}</a>

					</div>

				{% else %}

					{% assign per = settings.home_list_products_max | times: 1 %}

					{% if collection_count > 0 %}

						{% for product in collections[settings.home_collections_select].products limit:per %}

						<!-- locksmith:v3({% include 'locksmith-variables', locksmith_scope: 'subject', locksmith_subject: product %} {% unless locksmith_locked and locksmith_access_denied and locksmith_manual_lock == false %}) -->
						    {% include 'collection_item' %}
						<!-- locksmith:v3({% endunless %}) -->
						{% endfor %}

					{% endif %}

				{% endif %}

			</div>

		{% endif %}

		{% if settings.home_page_enable %}

			<div class="home-content wpadding">

				<header class="page-title">
					<h3 class="title">{{ pages[settings.home_page_select].title }}</h3>
				</header>

				<div class="rte">
					{{ pages[settings.home_page_select].content }}
				</div>

			</div>

		{% endif %}

		{% if settings.home_blog_enable %}

			<div class="home-content wpadding">
			
				{% assign per = settings.home_blog_max | times: 1 %}

				<header class="page-title">
					<h3 class="title">{{ blogs[settings.home_blog_select].title }}</h3>
				</header>

				<div class="blog-grid cols-{{ settings.blog_cols }} clearfix">

					{% for article in blogs[settings.home_blog_select].articles limit:per %}

					<!-- locksmith:v3({% include 'locksmith-variables', locksmith_scope: 'subject', locksmith_subject: article %} {% unless locksmith_locked and locksmith_access_denied and locksmith_manual_lock == false %}) -->
						{% include 'blog_item' %}
					<!-- locksmith:v3({% endunless %}) -->
					{% endfor %}

				</div>

			</div>

		{% endif %}

	</div>

{% endif %}

{% if settings.home_list_enable == 'no' and settings.carousel_enable == blank and settings.home_page_enable == blank and settings.home_blog_enable == blank %}
	<p class="no-content-message">{{ 'general.onboarding.blank_homepage' | t }}</p>
	<a class="button" href="/admin/themes">{{ 'general.onboarding.customize_theme' | t }}</a>
{% endif %}